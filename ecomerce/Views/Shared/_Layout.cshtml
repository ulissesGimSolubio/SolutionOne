        document.addEventListener("DOMContentLoaded", function () {
            const headers = document.querySelectorAll('.sort-link');

            headers.forEach(header => {
                header.addEventListener('click', () => {
                    const column = header.getAttribute('data-column');
                    const isAscending = header.querySelector('.sort-icon').classList.contains('asc');
                    const sortOrder = isAscending ? -1 : 1;

                    const rows = Array.from(document.querySelectorAll('tbody tr'));

                    rows.sort((a, b) => {
                        const aValue = a.querySelector(`[data-column="${column}"]`).textContent.trim();
                        const bValue = b.querySelector(`[data-column="${column}"]`).textContent.trim();

                        if (!isNaN(parseFloat(aValue)) && isFinite(aValue) && !isNaN(parseFloat(bValue)) && isFinite(bValue)) {
                            return sortOrder * (parseFloat(aValue) - parseFloat(bValue));
                        } else {
                            return sortOrder * aValue.localeCompare(bValue);
                        }
                    });

                    const tbody = document.querySelector('tbody');

                    rows.forEach(row => {
                        tbody.appendChild(row);
                    });

                    headers.forEach(header => {
                        header.querySelector('.sort-icon').classList.remove('asc', 'desc');
                    });

                    header.querySelector('.sort-icon').classList.toggle(isAscending ? 'desc' : 'asc');

                });
            });

            $(document).ready(function () {
                // Função para aplicar a máscara enquanto o usuário digita
                $('#CEP').on('input', function () {
                    var cep = $(this).val().replace(/\D/g, ''); // Remove todos os caracteres não numéricos
                    if (cep.length > 5) {
                        cep = cep.replace(/^(\d{2})(\d{3})(\d{1,3})/, '$1.$2-$3'); // Aplica a máscara
                    }
                    $(this).val(cep);
                });
            });            
        });

    </script>    

    <script>
        function formatarDocumento() {
            var tipoPessoa = document.getElementById("tipoPessoa").value;
            var documento = document.getElementById("CpfCnpj").value;
            var campo = document.getElementById("CpfCnpj");

            if (tipoPessoa === "0") {
                campo.placeholder = "CPF";
                campo.maxLength = "14";
                mascaraCPF(campo);
            } else if (tipoPessoa === "1") {
                campo.placeholder = "CNPJ";
                campo.maxLength = "18";
                mascaraCNPJ(campo);
            }
        }

        function mascaraCPF(campo) {
            campo.value = campo.value.replace(/\D/g, "")
                .replace(/(\d{3})(\d)/, "$1.$2")
                .replace(/(\d{3})(\d)/, "$1.$2")
                .replace(/(\d{3})(\d{1,2})$/, "$1-$2");
        }

        function mascaraCNPJ(campo) {
            campo.value = campo.value.replace(/\D/g, "")
                .replace(/^(\d{2})(\d)/, "$1.$2")
                .replace(/^(\d{2})\.(\d{3})(\d)/, "$1.$2.$3")
                .replace(/\.(\d{3})(\d)/, ".$1/$2")
                .replace(/(\d{4})(\d)/, "$1-$2");
        }

        function limparCampo() {
            document.getElementById("CpfCnpj").value = "";
            var tipoPessoa = document.getElementById("tipoPessoa").value;
            var campo = document.getElementById("CpfCnpj");
            if (tipoPessoa === "0") {
                campo.placeholder = "CPF";
            } else if (tipoPessoa === "1") {
                campo.placeholder = "CNPJ";
            }
        }

        window.onload = formatarDocumento;

    </script>

    <script>
        // Função para formatar o número de telefone enquanto digita
        function formatarCampoTexto(campo) {
            let mascara = campo.getAttribute('data-mask');
            // Remover todos os caracteres não numéricos
            let value = campo.value.replace(/\D/g, '');

            let formatado = '';
            let cont = 0;
            for (let i = 0; i < mascara.length; i++) {
                if (mascara[i] === 'X') {
                    if (value[cont] !== undefined) {
                        formatado += value[cont];
                        cont++;
                    } else {
                        break;
                    }
                } else {
                    formatado += mascara[i];
                }
            }

            campo.value = formatado;
        }

        // Adicionar o evento oninput para chamar a função de formatação para o primeiro campo
        document.getElementById('phoneInputMask_Movel').oninput = function () {
            formatarCampoTexto(this);
        };

        // Adicionar o evento oninput para chamar a função de formatação para o segundo campo
        document.getElementById('phoneInputMask_fixed').oninput = function () {
            formatarCampoTexto(this);
        };
    </script>



