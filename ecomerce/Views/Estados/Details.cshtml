@model Ecomerce.Models.Estado

@{
    ViewData["Title"] = "Detalhes do Estado";
}

<h1><i class="fa-solid fa-map"></i> Detalhes do Estado</h1>

<br />

<div class="alert alert-secondary" role="alert">

    <h4>@Html.DisplayFor(model => model.EstadoNome) - @Html.DisplayFor(model => model.EstadoSigla)</h4>

    <hr>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoSigla)
        </dt>
        <dd class = "col-sm-10">
            <i class="fa-solid fa-map-location-dot"></i> @Html.DisplayFor(model => model.EstadoSigla)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.EstadoNome)
        </dt>
        <dd class = "col-sm-10">
            <i class="fa-solid fa-map-location-dot"></i> @Html.DisplayFor(model => model.EstadoNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Pais)
        </dt>
        <dd class = "col-sm-10">
            <i class="fa-solid fa-globe"></i> @Html.DisplayFor(model => model.Pais.PaisNome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Ativo)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Ativo)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Created)
        </dt>
        <dd class="col-sm-10">
            <i class="fa-solid fa-square-plus"></i> @Model.Created.ToString("dd/MM/yyyy HH:MM")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Updated)
        </dt>
        <dd class = "col-sm-10">
            <i class="fa-solid fa-arrows-rotate"></i> @Model.Updated.ToString("dd/MM/yyyy HH:MM")
        </dd>        
    </dl>
</div>

<hr />

<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model?.EstadoId"><i class="fa-sharp fa-solid fa-pencil"></i> Atualizar</a> &nbsp; 
    <a class="btn btn-warning" asp-action="Index"><i class="fa fa-reply" aria-hidden="true"></i> Voltar</a>
</div>

<hr />
